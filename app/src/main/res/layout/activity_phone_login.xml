<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".view.auth.PhoneLoginActivity">

    <LinearLayout
        android:id="@+id/tollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#B2FBC02D"
            android:fontFamily="@font/audiowide"
            android:layout_height="wrap_content"
            android:text="Mobile Register"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_more_vert"
            tools:ignore="SpeakableTextPresentCheck" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tollbar"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center_horizontal"
            android:text="will send an SMS message to verify your phone number"
            android:textColor="#C4FABE07"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/flag" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_code_country"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="49"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:drawableTint="@color/black"
                android:hint="176-1234567"
                android:inputType="phone"
                android:maxLength="14"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/autour_one"
            android:text="Carrie SMS charge may apply"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/ed_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/otp"
                android:gravity="center_horizontal"
                android:textColorHint="@color/black"
                android:hint="Enter SMS-Code"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@null"
        android:background="@drawable/accept_button"
        android:fontFamily="@font/audiowide"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>

</layout>